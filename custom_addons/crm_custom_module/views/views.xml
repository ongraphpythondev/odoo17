<odoo>
    <data>
        <!-- Define the action for the CRM User menu item -->
        <record id="action_crm_user" model="ir.actions.act_window">
            <field name="name">CRM Users</field>
            <field name="res_model">crm.user</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create and manage CRM users here.
                </p>
            </field>
        </record>

        <!-- Define the menu item for the CRM User -->
        <menuitem id="menu_crm_user" name="CRM Users" sequence="10"/>
        <menuitem id="submenu_crm_user" name="CRM Users" parent="menu_crm_user" action="action_crm_user"/>
    </data>
</odoo>
